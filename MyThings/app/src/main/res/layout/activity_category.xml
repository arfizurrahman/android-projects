<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFadedWhite"
    android:paddingTop="30dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical"
    tools:context="com.example.arfiz.mythings.CategoryActivity">

    <LinearLayout
        android:id="@+id/select_category_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorShadedBlack"
            android:text="Select a Category"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/categories_linear_layout"
        android:layout_below="@+id/select_category_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:paddingTop="40dp"
        android:paddingStart="20dp"
        android:paddingBottom="20dp">
        <LinearLayout
            android:id="@+id/category_first_row"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:background="@drawable/custom_ripple_border"
                android:clickable="true"
                android:onClick="Idea">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle2">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/idea"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:text="IDEA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Place">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="55dp"
                        android:src="@drawable/place"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:layout_gravity="center"
                    android:text="PLACE"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Food">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle6">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="60dp"
                        android:src="@drawable/food"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="FOOD"
                    android:textColor="@color/colorShadedBlack"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_second_row"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/category_first_row"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Movie">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle3">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/movie"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:text="MOVIE"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Music">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/circle5">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="60dp"
                        android:src="@drawable/music1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:layout_gravity="center"
                    android:text="MUSIC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Person">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle9">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/person"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="PERSON"
                    android:textColor="@color/colorShadedBlack"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/category_third_row"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/category_second_row"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Book">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:src="@drawable/book1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:text="BOOK"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/custom_ripple_border"
                android:onClick="Product">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/circle7">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:src="@drawable/product"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorShadedBlack"
                    android:layout_gravity="center"
                    android:text="PRODUCT"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/custom_ripple_border"
                android:clickable="true"
                android:onClick="Restaurant">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/circle4">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="60dp"
                        android:src="@drawable/restaurant"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:text="RESTAURANT"
                    android:textColor="@color/colorShadedBlack"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
